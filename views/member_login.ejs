    .progressBar{
      width: 60%;
      height: 50px;
      position: relative;
      margin: 50px 0 0 100px;
    }
    .progressBar div{
      width: 100%;
      height: 10px;
      position: absolute;
      top:50%;
      left: 0;
      margin-top:-20px;
      border:1px solid #ddd;
      background: #ccc;
    }
    .progressBar div span{
      position: absolute;
      display: inline-block;
      height: 10px;
      width: 25%;
    }
    .progressBar>span{
      position: absolute;
      top:0;
      margin-top: -10px;
      width: 40px;
      height: 40px;
      border:2px solid #ddd;
      border-radius: 50%;
      /* background:#19294f; */
      margin-left: -20px;
      color:#fff;
    }
    .progressBar>span:nth-child(1){
      left: 0%;
      background:#19294f;
    }
    .progressBar>span:nth-child(2){
      left: 25%;
      /* background:#19294f; */
      
    }
    .progressBar>span:nth-child(3){
    left: 50%;
    /* background:#19294f; */

