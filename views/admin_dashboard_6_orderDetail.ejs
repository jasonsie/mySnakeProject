
  <!DOCTYPE html>
  <head>
    <%-include css_js.ejs %>
      <title>
        <%= title %>
      </title>
      <link rel="stylesheet" href="/stylesheets/admin_dashboard.css">
      <!-- <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/wangeditor@latest/dist/wangEditor.min.js"></script> -->
  </head>
<body>
  <div class="dashboard">
  <%-include  admin_dashboard_0_leftSelect.ejs %>
  <div class="right-content">
 <!-- 點"查看----訂單詳情 -->
 <div class="containerdisplay" id="checkorderdetailcontainer">
   <p>訂單管理 > 訂單列表 > 訂單詳細內容</p>
<div class="admin-addpage"> 
  <div id='adminOrderDetail'>
    <!-- 左側商品清單 -->
    <div>
        <table id='adminOrderListOn'>
            <tr>
                <td>商品名稱</td>
                <td>商品價格</td>
                <td>數量</td>
                <td>小計</td>
            </tr>
             <% for (let item of orderListDetail) { %>
            <tr>
                <td><%= item.prodName %></td>
                <td><%= item.prodPrice %></td>
                <td><%= item.orderQuantity %></td>
                <td><%= item.prodPrice*item.orderQuantity %></td>
            </tr>
            <% } %>
        </table>
        <input type="button" value="返回" onclick="location.href='/admin/dashboard/orderlist'">
    </div>
    <!-- 右側訂單資訊 -->
    <div id='adminOrderDetailTextBox'>
        <div>
        <table>
            <tr class="memberOrderDetailText">
                <td>訂單編號</td>
                <td><%= orderListDetail1.orderNo %></td>
            </tr>
            <tr class="memberOrderDetailText">
                <td>收件人</td>
                <td><%= orderListDetail1.orderName %></td>
            </tr>
            <tr class="memberOrderDetailText">
                <td>訂購日期</td>
                <td><%= `${orderListDetail1.orderDate.getFullYear()}/${orderListDetail1.orderDate.getMonth()+1}/${orderListDetail1.orderDate.getDate()}`%>
            <tr class="memberOrderDetailText">
                <td>訂購總額</td>
                <td>NT$ <%= orderListDetail1.orderPrice %></td>
            </tr>
            <tr class="memberOrderDetailText">
                <td>運送方式</td>
                <td><%= orderListDetail1.orderDeli %></td>
            </tr>
            <tr class="memberOrderDetailText">
                <td>付款方式</td>
                <td><%= orderListDetail1.orderPayment %></td>
            </tr>
            <tr class="memberOrderDetailText">
                <td>訂單狀態</td>
                <td><%= orderListDetail1.orderState %></td>
            </tr>
            <tr class="memberOrderDetailText">
                <td>出貨狀態</td>
                <td><%= orderListDetail1.orderSendState %></td>
            </tr>
            <tr class="memberOrderDetailText">
                <td>訂單備註</td>
                <td>無備註</td>
            </tr>
        </table>
        </div>
    </div>

    </div>
</div>
</div>
</div>
</div>
</body>
</html>
